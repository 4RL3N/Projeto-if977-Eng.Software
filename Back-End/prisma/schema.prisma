generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cliente{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  CPF String @unique
  contato String 
  foto String
  nome String
  desc String
  categoria String 
  email String @unique
  senha String
  postagens Postagem[]

}

model Postagem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  titulo String
  desc String
  categoria String
  valor Int
  contato String
  cidade String
  foto String
  criadoEm DateTime @default(now())
  atualizadoEm DateTime @updatedAt
  bairro String
  acomodacao String
  tipo_acomodacao String
  cliente Cliente @relation(fields: [clienteId], references: [id])
  clienteId String @db.ObjectId
  autorizada Boolean @default(false)
  motivo String?
}



