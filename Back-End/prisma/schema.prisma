generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cliente{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  CPF String @unique
  contato String 
  foto String
  nome String
  desc String
  categoria String // Admin, republica ou usu√°rio
  email String @unique
  senha String
  postagens Postagem[]

}

model Postagem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  titulo String
  desc String
  categoria String
  valor Int
  contato String
  cidade String
  estado String
  foto String
  criadoEm DateTime @default(now())
  atualizadoEm DateTime @updatedAt
  endereco String
  cliente Cliente @relation(fields: [clienteId], references: [id])
  clienteId String @db.ObjectId
  autorizada Boolean @default(false)
}



